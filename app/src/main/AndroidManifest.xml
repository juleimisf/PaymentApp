<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.paymentapp.cl.paymentapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PaymentApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_payment_choice"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_payment_choice"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".presentation.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="32996c58810231daf6b7939db27af1e13c1b803d" />
        <activity android:name=".presentation.activities.MainActivity"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>